{
  "name": "fareplay-backend",
  "version": "1.0.4",
  "description": "",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0 <18.0.0"
  },
  "scripts": {
    "build": "sh bin/build.sh",
    "build:run": "node --experimental-specifier-resolution=node -r dotenv/config dist/index.js",
    "clean": "tsc --build --clean",
    "clean:logs": "rm -rf ./logs",
    "copy-deps": "cp package.json ./dist/package.json && cd ./dist && pnpm install --only=production",
    "copy-dockerfile": "cp Dockerfile_deployed ./dist/Dockerfile",
    "copy-platform": "mkdir -p ./dist/.platform/ && cp -r .platform/* ./dist/.platform/ && ls -la ./dist/",
    "copy-protos": "bin/copy-protos.sh",
    "db:cli": "mongo admin -u admin -p password",
    "docker:build": "docker build --no-cache -t fp-backend .",
    "docker:down": "docker compose -p fp down --volumes --remove-orphans",
    "docker:server": "docker compose -p fp --profile server --env-file .env up -d",
    "docker:testnet": "docker compose -p fp --profile server --profile testnet --env-file .env up -d",
    "docker:testnet:build": "docker compose -p fp --profile server --profile testnet --env-file .env up -d --build",
    "docker:up": "docker compose -p fp --env-file .env up -d",
    "envoy": "envoy -c config/envoy.config.yaml",
    "envoy:docker": "envoy -c config/envoy.docker.yaml",
    "gen:csharp": "sh bin/generate-unity-classes.sh",
    "lint": "npx eslint . --ext .ts --cache",
    "lint:ci": "eslint --max-warnings=0 . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "npx eslint . --ext .ts --fix --cache",
    "postbuild": "npm run copy-dockerfile && npm run copy-deps && npm run copy-platform",
    "production": "pnpm run build && pnpm run build:run",
    "start": "nodemon -r dotenv/config --exec node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm index.ts",
    "start:keeper": "nodemon -r dotenv/config --exec node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm processes/pearKeeper.ts",
    "start:listener": "nodemon -r dotenv/config --exec node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm processes/listenerProcess.ts",
    "start:queue": "nodemon -r dotenv/config --exec node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm processes/queueProcess.ts",
    "update:contract:types": "cd ../../fare-smart-contracts/crypto && npm run generate:types"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@colyseus/command": "^0.2.1",
    "@colyseus/core": "^0.14.36",
    "@colyseus/mongoose-driver": "^0.14.22",
    "@colyseus/monitor": "^0.15.0-preview.3",
    "@colyseus/proxy": "^0.12.9",
    "@colyseus/redis-presence": "^0.14.20",
    "@colyseus/schema": "^1.0.45",
    "@colyseus/uwebsockets-transport": "^0.14.29",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@fastify/cors": "^8.2.0",
    "@pagerduty/pdjs": "^2.2.4",
    "@slack/bolt": "^3.12.1",
    "bcrypt": "^5.0.1",
    "bullmq": "^3.10.1",
    "chalk": "^4.1.0",
    "chance": "^1.1.9",
    "colyseus": "link:./node_modules/@colyseus/core",
    "dayjs": "^1.11.2",
    "debug": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.2",
    "eventemitter3": "^5.0.0",
    "express": "^4.18.1",
    "express-basic-auth": "^1.2.1",
    "fastify": "^4.10.2",
    "ioredis": "^5.0.6",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.1.0",
    "nanoid": "^4.0.1",
    "node-forge": "^1.3.1",
    "npm": "^8.3.0",
    "numeral": "^2.0.6",
    "os": "^0.1.2",
    "redis": "^4.1.0",
    "redis-om": "^0.3.1",
    "shortid": "^2.2.16",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.20.0",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "winston": "^3.7.2"
  },
  "overrides": {
    "@colyseus/uwebsockets-transport": {
      "dependencies": {
        "uWebSockets.js": "$uWebSockets.js"
      }
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^17.0.23",
    "@types/node-forge": "^1.3.1",
    "@types/numeral": "^2.0.2",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
